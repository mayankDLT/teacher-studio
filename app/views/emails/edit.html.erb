<h2><%=t('email.edit_email')%></h2>

<% form_for @email_template, :html => { :id => "class_form"} do |f| %>
  <%= f.error_messages %>
  
    <label><%=t('email.english_content')%></label><br><br>
	<%= f.text_area :content, :style=>"border: 1px solid rgb(209, 209, 209); width: 496px; height: 142px;", :class=>"validate[required,funcCall[checkHELLO]] text-input" %><br />
	<%= f.hidden_field :section_id%>
	<br /><br>
	<label><%=t('email.german_content')%></label><br><br>
	<%= f.text_area :content_de, :style=>"border: 1px solid rgb(209, 209, 209); width: 496px; height: 142px;", :class=>"validate[required,funcCall[checkHELLO]] text-input" %><br />
	<%= f.hidden_field :section_id%>
	<br />
	<br>
	<label><%=t('email.arabic_content')%></label><br><br>
	<%= f.text_area :content_ar, :style=>"border: 1px solid rgb(209, 209, 209); width: 496px; height: 142px;", :class=>"validate[required,funcCall[checkHELLO]] text-input" %><br />
	<%= f.hidden_field :section_id%>
	<br />
	<br>
	<label><%=t('email.chinese_content')%></label><br><br>
	<%= f.text_area :content_zh, :style=>"border: 1px solid rgb(209, 209, 209); width: 496px; height: 142px;", :class=>"validate[required,funcCall[checkHELLO]] text-input" %><br />
	<%= f.hidden_field :section_id%>
	<br />
  <%= f.submit t('general.update'), :class=>'btnBg',:id=>"Submit" %>
<% end %>

<br><br>
 

