<%= stylesheet_link_tag "image-based"%>
<div style="display:flex; align-items:center;">
<h3>Options</h3>
<table class="answer_name" style="float:left; width:100%; padding:0; margin:0;" >
	<tr>

	</tr>
	
	<% 1.upto(2) do |i| %>
		<tr>
			<td>
		  		<%= check_box_tag "fields[#{i}][is_answer]", '1', false, :class=>"validate[maxCheckbox[1]] checkbox", :style=>"display:none;
				  display:inline;width:auto;margin-right: 5px; margin-top:3px;", :class=>"mtie7" %>
			  	<%= text_field_tag "fields[#{i}][name]",'', :class=>"validate[required,funcCall[checkHELLO]] text-input blankCount", :style=>"width:20vw; margin-left:2vw;height:19px; border:#d1d1d1 1px solid; margin-right:10px; " %>
			  	<br>
		  	</td>
	  	</tr>
	<% end %>
</table>
</div>