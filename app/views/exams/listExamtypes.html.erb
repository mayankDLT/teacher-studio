<div class="updateStatus">
<h2><%=t('exam.exam_type')%></h2>
<%unless @examtypes.empty?%>
<table border="0" cellspacing="0">
<tr class="updateHeader">
	<th><%=t('general.name')%></th>
	<th><%=t('general.edit')%></th>
	<th><%=t('general.delete')%></th>
</tr>

	<%@examtypes.each do|examtype|%>
	<tr class="updateAltrRow <%= cycle("odd", "even") %>">
	<td><%=examtype.name%></td>
	<td><%=link_to image_tag("edit.png", :alt=>"Edit"), :action=>:editExamtype, :examtype_id=>examtype.id%></td>
	<td>
	<%=link_to(image_tag("del.png", :alt=>"Remove"), {:action=>:deleteExamtype,:examtype_id=>examtype.id},{ :confirm=> t('json_message.are_you_sure') })%>
</td>
	</tr>
	<%end%>

</table><br>
<%else%>
<div class="formContainer">
  <%=t('not_found.no_exam_type')%>. 
 </div>
 <%end%>
<%=link_to t('general.create'), :action=>'examtype', :controller=>'exams'%> 

<div class="pagination">

<%= will_paginate @examtypes, 
                :prev_label => t('general.previous'), 
                :next_label => t('general.next'),
                :page_links =>true,           
                :renderer => PaginationListLinkRenderer
              %>

</div>
</div>