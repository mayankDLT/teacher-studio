<div class="paginationDiv floatR">
	<span style="float:right;">
	 <%=link_to "10","#",:id=>"10",:class=>"pageNum"%> | <%=link_to "20","#",:id=>"20",:class=>"pageNum"%> | <%=link_to "35","#",:id=>"35",:class=>"pageNum"%> 
	 | <%=link_to "50","#",:id=>"50",:class=>"pageNum"%> | <%=link_to "75","#",:id=>"75",:class=>"pageNum"%>
	 | <%=link_to "100","#",:id=>"100",:class=>"pageNum"%>
	</span>
</div>

<script type="text/javascript">
	$(document).ready(function() {
		
		if ("<%=params[:pageLength]%>" == 20){
			$(".paginationDiv #20").css({
			    'font-weight': "bold"
			});
		}
		else if ("<%=params[:pageLength]%>" == 35){
			$(".paginationDiv #35").css({
			    'font-weight': "bold" 
			});
		}
		else if ("<%=params[:pageLength]%>" == 50){
			$(".paginationDiv #50").css({
			    'font-weight': "bold"
			});
		}
		else if ("<%=params[:pageLength]%>" == 75){
			$(".paginationDiv #75").css({
			    'font-weight': "bold"
			});
		}
		else if ("<%=params[:pageLength]%>" == 100){
			$(".paginationDiv #100").css({
			    'font-weight': "bold" 
			});
		}
		else{
			$(".paginationDiv #10").css({
			    'font-weight': "bold" 
			});
		}	
	});
</script>