<h1>Category : <%= @category.name %></h1>
<% @articles.each do |article| %>
    <strong><%= article.created_at.try(:strftime,"%B %d %Y %H:%M %p") %></strong>
    <div style="margin-left:100px">
      <h2 class="entry-title"><%= link_to article.title, :controller => "article", :articles => article.title %></h2>
    </div><br/>
<% end %>
